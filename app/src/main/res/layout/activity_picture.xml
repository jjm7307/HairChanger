<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".picture.PictureAcivity">

    <com.example.a2020falll_deep_fake.picture.CameraSurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="410dp"
        android:layout_height="729dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/white"
        android:layout_gravity="center_horizontal|top"/>

    <ImageView
        android:id="@+id/guide_line"
        android:layout_width="410dp"
        android:layout_height="390dp"
        android:layout_marginTop="230dp"
        android:scaleType="fitCenter"
        android:src="@drawable/guide_line_1"/>
    <FrameLayout
        android:layout_marginTop="610dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp">
            <ImageView
                android:id="@+id/bt_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_camera"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginRight="40dp"
            android:layout_gravity="center_vertical|right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardUseCompatPadding="false"
            app:cardElevation="0dp"
            app:cardCornerRadius="30dp">
            <ImageView
                android:id="@+id/bt_send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                android:src="@drawable/icon_ok"/>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/image_2_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/camera_2"/>
            <ImageView
                android:id="@+id/image_2_lock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/camera_lock"/>
        </FrameLayout>
        <FrameLayout
            android:layout_marginHorizontal="13dp"
            android:layout_width="120dp"
            android:layout_height="120dp">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/image_1_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/camera_1"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp">
            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/image_3_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/camera_3"/>
            <ImageView
                android:id="@+id/image_3_lock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/camera_lock"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="145dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_check2"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/icon_check"/>
        <ImageView
            android:id="@+id/icon_check1"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_marginHorizontal="13dp"
            android:visibility="visible"
            android:src="@drawable/icon_check"/>
        <ImageView
            android:id="@+id/icon_check3"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/icon_check"/>
    </LinearLayout>
</FrameLayout>